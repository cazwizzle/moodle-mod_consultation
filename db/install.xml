<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/consultation/db" VERSION="20090802" COMMENT="XMLDB file for Moodle mod/consultation"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="consultation" COMMENT="Consultation module" NEXT="consultation_inquiries">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" NEXT="course"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" PREVIOUS="id" NEXT="name"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" ENUM="false" PREVIOUS="course" NEXT="intro"/>
        <FIELD NAME="intro" TYPE="text" LENGTH="medium" NOTNULL="false" SEQUENCE="false" ENUM="false" COMMENT="Default comment for the field, please edit me" PREVIOUS="name" NEXT="introformat"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" COMMENT="Default comment for the field, please edit me" PREVIOUS="intro" NEXT="openlimit"/>
        <FIELD NAME="openlimit" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" COMMENT="maximum number of consulations" PREVIOUS="introformat" NEXT="deleteafter"/>
        <FIELD NAME="deleteafter" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" COMMENT="Delete resolved inquiries after X days" PREVIOUS="openlimit" NEXT="edittime"/>
        <FIELD NAME="edittime" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" COMMENT="how long editing allowed" PREVIOUS="deleteafter" NEXT="notify"/>
        <FIELD NAME="notify" TYPE="int" LENGTH="4" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" COMMENT="notification flag" PREVIOUS="edittime" NEXT="timemodified"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" PREVIOUS="notify"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="Primary key for label" NEXT="course"/>
        <KEY NAME="course" TYPE="foreign" FIELDS="course" REFTABLE="course" REFFIELDS="id" PREVIOUS="primary"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="consultation_inquiries" COMMENT="Consultation - 1 on 1 support inquiries" PREVIOUS="consultation" NEXT="consultation_posts">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" COMMENT="id of the table, please edit me" NEXT="consultationid"/>
        <FIELD NAME="consultationid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" PREVIOUS="id" NEXT="userfrom"/>
        <FIELD NAME="userfrom" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" COMMENT="Default comment for the field, please edit me" PREVIOUS="consultationid" NEXT="userto"/>
        <FIELD NAME="userto" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" PREVIOUS="userfrom" NEXT="subject"/>
        <FIELD NAME="subject" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" ENUM="false" PREVIOUS="userto" NEXT="resolved"/>
        <FIELD NAME="resolved" TYPE="int" LENGTH="4" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" PREVIOUS="subject" NEXT="timecreated"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" PREVIOUS="resolved" NEXT="timemodified"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" PREVIOUS="timecreated"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="primary key of the table, please edit me" NEXT="consultationid"/>
        <KEY NAME="consultationid" TYPE="foreign" FIELDS="consultationid" REFTABLE="consultation" REFFIELDS="id" PREVIOUS="primary" NEXT="userfrom"/>
        <KEY NAME="userfrom" TYPE="foreign" FIELDS="userfrom" REFTABLE="user" REFFIELDS="id" PREVIOUS="consultationid" NEXT="userto"/>
        <KEY NAME="userto" TYPE="foreign" FIELDS="userto" REFTABLE="user" REFFIELDS="id" PREVIOUS="userfrom"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="consultation_posts" COMMENT="Posts in each consultation inquiry" PREVIOUS="consultation_inquiries">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" COMMENT="id of the table, please edit me" NEXT="inquiryid"/>
        <FIELD NAME="inquiryid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" PREVIOUS="id" NEXT="userid"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" PREVIOUS="inquiryid" NEXT="message"/>
        <FIELD NAME="message" TYPE="text" LENGTH="medium" NOTNULL="true" SEQUENCE="false" ENUM="false" PREVIOUS="userid" NEXT="messageformat"/>
        <FIELD NAME="messageformat" TYPE="int" LENGTH="4" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" COMMENT="Default comment for the field, please edit me" PREVIOUS="message" NEXT="attachment"/>
        <FIELD NAME="attachment" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" ENUM="false" COMMENT="attached file, empty string means no attachment" PREVIOUS="messageformat" NEXT="notified"/>
        <FIELD NAME="notified" TYPE="int" LENGTH="4" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" COMMENT="notification flag, 1 measn user notified, 0 not yet" PREVIOUS="attachment" NEXT="seenon"/>
        <FIELD NAME="seenon" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" SEQUENCE="false" ENUM="false" COMMENT="when was the message read" PREVIOUS="notified" NEXT="timecreated"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" PREVIOUS="seenon" NEXT="timemodified"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" PREVIOUS="timecreated"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="primary key of the table, please edit me" NEXT="inquiryid"/>
        <KEY NAME="inquiryid" TYPE="foreign" FIELDS="inquiryid" REFTABLE="consultation_inquiries" REFFIELDS="id" PREVIOUS="primary" NEXT="userid"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id" PREVIOUS="inquiryid"/>
      </KEYS>
    </TABLE>
  </TABLES>
  <STATEMENTS>
    <STATEMENT NAME="insert log_display" TYPE="insert" TABLE="log_display" COMMENT="Initial insert of records on table log_display">
      <SENTENCES>
        <SENTENCE TEXT="(module, action, mtable, field) VALUES ('consultation', 'view', 'consultation', 'name')" />
        <SENTENCE TEXT="(module, action, mtable, field) VALUES ('consultation', 'view all', 'consultation', 'name')" />
        <SENTENCE TEXT="(module, action, mtable, field) VALUES ('consultation', 'update', 'consultation', 'name')" />
        <SENTENCE TEXT="(module, action, mtable, field) VALUES ('consultation', 'open inquiry', 'consultation_inquiries', 'subject')" />
        <SENTENCE TEXT="(module, action, mtable, field) VALUES ('consultation', 'view inquiry', 'consultation_inquiries', 'subject')" />
        <SENTENCE TEXT="(module, action, mtable, field) VALUES ('consultation', 'participate inquiry', 'consultation_inquiries', 'subject')" />
        <SENTENCE TEXT="(module, action, mtable, field) VALUES ('consultation', 'resolve inquiry', 'consultation_inquiries', 'subject')" />
        <SENTENCE TEXT="(module, action, mtable, field) VALUES ('consultation', 'reopen inquiry', 'consultation_inquiries', 'subject')" />
      </SENTENCES>
    </STATEMENT>
  </STATEMENTS>
</XMLDB>